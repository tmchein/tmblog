---
import clsx from "clsx";
import ThemeButton from "./ThemeButton.astro";
import { deviffyRoute } from "../utils/deviffy/deviffyRoutes";
interface Props {
  className?: string;
}

const { className } = Astro.props;
const { pathname } = Astro.url;

const deviffiedAbout = deviffyRoute("/about/")

const STYLES = {
  "/" : `text-purple-500 underline dark:text-purple-200`,
  [deviffiedAbout] : "text-purple-500 underline dark:text-purple-200",
} as const

---

<header class="my-14 flex justify-center">
  <nav
    class={clsx(
      `max-w-sm w-full text-xl font-semibold flex items-center justify-between`,
      className
    )}
  >
    <ul class="m-0 p-0 flex gap-4">
      <li>
        <a
          class={clsx(pathname === "/"
          ? STYLES[pathname]
          : "transition-colors duration-300 text-black dark:text-white hover:text-purple-500")}
          href="/">Inicio</a
        >
      </li>
      <li>
        <a
          class={clsx(
            pathname === deviffiedAbout
              ? STYLES[pathname]
              : "transition-colors duration-300 text-black dark:text-white hover:text-purple-500"
          )}
          href="/about">Sobre mi</a
        >
      </li>
    </ul>
    <ThemeButton />
  </nav>
</header>
